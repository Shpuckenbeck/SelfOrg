@model IEnumerable<SelfOrg.Models.PostTag>

@{
    ViewData["Title"] = "Посты";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Post.PostName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post.content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post.PostDescr)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post.PostDate)
                </th>
               
            <th>
                @Html.DisplayNameFor(model => model.Post.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post.User)
            </th>
            <th>
                Теги
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @{ 
           int lastitem = 0;
       }
@foreach (var item in Model)
{if (item.PostId != lastitem) //И это, на самом деле, дикий костыль, чтобы избежать повторного отображения постов. Однажды НЕОБХОДИМО будет переписать. Но не сейчас, не сейчас. Однажды
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post.PostName)
            </td>
            <td>
                @Html.Raw(@item.Post.content)
            </td>
            <td>
                @Html.Raw(@item.Post.PostDescr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.PostDate)
            </td>
            <td>
                <a asp-action="Sorting" asp-route-id="@item.Post.Category.CategoryId">@item.Post.Category.CatName</a>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.User.displayedname)
            </td>
            <td>
                @{ 
                    foreach (var ex in Model)
                    {
                        if (ex.PostId == item.PostId)
                        {
                            Html.Display(ex.Tag.TagName);

                        }

                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Post.PostID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Post.PostID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Post.PostID">Delete</a>
            </td>
        </tr>
        lastitem = item.PostId;
    }

}
    </tbody>
</table>
